<Window x:Class="ContractMonthlyClaimSystem.UploadDocumentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Upload Documents" Height="250" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <!-- Document Path -->
            <Grid>
                <TextBox x:Name="txtDocumentPath" Margin="5" Text="{Binding Path=DocumentPath, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="Enter Document Path" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0" IsHitTestVisible="False"/>
            </Grid>

            <Button Content="Browse" Click="Browse_Click" Margin="5"/>
            <Button Content="Upload" Click="Upload_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
